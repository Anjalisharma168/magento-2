<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="default" engine="innodb" >
        <column xsi:type="text" name="ordercomment" nullable="true" comment="Order Country comment"/>
        <column xsi:type="date" name="orderdate" nullable="true" comment="Order Country orderdate"/>
        <column xsi:type="varchar" name="ordertime" nullable="true" length="255" comment="Order time"/>
	</table>
	<table name="quote" resource="default" engine="innodb" >
        <column xsi:type="text" name="ordercomment" nullable="true" comment="Order Country comment"/>
        <column xsi:type="date" name="orderdate" nullable="true" comment="Order Country orderdate"/>
        <column xsi:type="varchar" name="ordertime" nullable="true" length="255" comment="Order time"/>
	</table>
</schema>