<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::productnotification_elements" title="Lof ProductNotification">
                    <resource id="Lof_ProductNotification::stock" title="Stock" sortOrder="10">
                        <resource id="Lof_ProductNotification::stock_edit" title="Edit" sortOrder="10" />
                        <resource id="Lof_ProductNotification::stock_save" title="Save" sortOrder="20" />
                        <resource id="Lof_ProductNotification::stock_delete" title="Delete" sortOrder="30" />
                    </resource>
                    <resource id="Lof_ProductNotification::price" title="Price" sortOrder="20">
                        <resource id="Lof_ProductNotification::price_edit" title="Edit" sortOrder="10" />
                        <resource id="Lof_ProductNotification::price_save" title="Save" sortOrder="20" />
                        <resource id="Lof_ProductNotification::price_delete" title="Delete" sortOrder="30" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Lof_ProductNotification::configurations" title="Product Notification" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>